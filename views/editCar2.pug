extends ./includes/layout.pug

block content
    section.container
        h1.header= title
        article.item
            form.form(method="post", action="/actualizar/" + data[0].productCode)
                input(type="hidden", name="_method", value="PUT")
                input(type="hidden", name="productCode", value=data[0].productCode)
                fieldset
                    div
                        input(type="text", name="completeName", placeholder="Nombre completo", value=productCode, required)
                    div
                        input(type="text", name="adressLine", placeholder="Domicilio", value=data[0].model, required)
                    div
                        input(type="text", name="cellPhone", placeholder="Celular", value=year, required)
                    div
                        input.button.edit(type="submit", value="Editar")
        a.button.show(href="/") 