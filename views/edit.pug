extends ./includes/layout.pug
 
block content
    section.container
        h1.header= title 
        article.item
            form.form(method="post", action="/actualizar/" + data[0].idSeller)
                input(type="hidden", name="_method", value="PUT")
                input(type="hidden", name="idSeller", value=data[0].idSeller)
                fieldset
                    div
                        input(type="text", name="completeName", placeholder="Nombre completo", value=data[0].completeName, required)
                    div
                        input(type="text", name="adressLine", placeholder="Domicilio", value=data[0].adressLine, required)
                    div
                        input(type="text", name="cellPhone", placeholder="Celular", value=data[0].cellphone, required)
                    div
                        input.button.edit(type="submit", value="Editar")
        a.button.show(href="/") 