extends ./includes/layoutDos.pug

block content
    <!DOCTYPE html>
    <html lang="en" >
    <head>
        <meta charset="UTF-8">
        <title>Buy car</title>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js" type="text/javascript"></script>
        <link rel='stylesheet prefetch' href='http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
        <link rel='stylesheet prefetch' href='http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css'>
        <link rel='stylesheet prefetch' href='http://cdnjs.cloudflare.com/ajax/libs/jquery.bootstrapvalidator/0.5.0/css/bootstrapValidator.min.css'>
        <link rel="stylesheet" href="css/styleFormulario.css">
    </head>
    <body>
    <div class="container">
    <form class="well form-horizontal" action="/buy" method="post"  id="contact_form">
        <fieldset>
            <!-- Form Name -->
            <legend>Buy car</legend>
            <!-- Text input-->
            //- <div class="form-group">
            //- <label class="col-md-4 control-label">Product code</label>  
            //- <div class="col-md-4 inputGroupContainer">
            //- <div class="input-group">
            //- <span class="input-group-addon"><i class="glyphicon glyphicon-certificate"></i></span>
            //- input(class="form-control" type="text", name="productCode", placeholder="Product code", value=data[0].productCode)
            //- </div>
            //- </div>
            //- </div>
            <!-- Text input-->
            <div class="form-group">
            <label class="col-md-4 control-label">Customer name</label>  
            <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-certificate"></i></span>
            input(class="form-control" type="text", name="customer", placeholder="Customer name")
            </div>
            </div>
            </div>

            <!-- Date input-->
            <div class="form-group">
            <label class="col-md-4 control-label">Order date</label>  
            <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-certificate"></i></span>
            input(class="form-control" type="text", name="orderDate", value="Monday, June 18, 2018")
            </div>
            </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
            <label class="col-md-4 control-label">Comments</label>  
            <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-certificate"></i></span>
            input(class="form-control" type="text", name="comments", placeholder="Comments", value="None")
            </div>
            </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
            <label class="col-md-4 control-label">Model</label>  
            <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-certificate"></i></span>
            input(class="form-control" type="text", name="model", placeholder="Model", value=data[0].model, disabled)
            </div>
            </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
            <label class="col-md-4 control-label">Year</label>  
            <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-certificate"></i></span>
            input(class="form-control" type="text", name="year", placeholder="Year", value=data[0].year, disabled)
            </div>
            </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
            <label class="col-md-4 control-label">Color</label>  
            <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-certificate"></i></span>
            input(class="form-control" type="text", name="color", placeholder="Color", value=data[0].color, disabled)
            </div>
            </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
            <label class="col-md-4 control-label">Transmission</label>  
            <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-certificate"></i></span>
            input(class="form-control" type="text", name="transmmission", placeholder="Transmission", value=data[0].transmmission, disabled)
            </div>
            </div>
            </div>
            
            <!-- Text input-->
            <div class="form-group">
            <label class="col-md-4 control-label">Cylinders</label>  
            <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-certificate"></i></span>
            input(class="form-control" type="text", name="cylinders", placeholder="Cylinders", value=data[0].cylinders, disabled)
            </div>
            </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
            <label class="col-md-4 control-label">Total</label>  
            <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-certificate"></i></span>
            input(class="form-control" type="text", name="total", value=data[0].price)
            </div>
            </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
            input(class="form-control" type="hidden", name="quantityOrdered", value="1")
            </div>

            <!-- Text input-->
            <div class="form-group">  
            input(class="form-control" type="hidden", name="priceEach", value=data[0].price)
            </div>

            <!-- Button --> 
            <div class="form-group">
            <label class="col-md-4 control-label"></label>
            <div class="col-md-4">
            <button type="submit" class="btn btn-warning" href="/buy">Buy<span></span></button>
            </div>
            </div>
        </fieldset>
    </form>
    </div>
    </div><!-- /.container -->
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src='http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js'></script>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/bootstrap-validator/0.4.5/js/bootstrapvalidator.min.js'></script>
    <script  src="js/indexFormulario.js"></script>
    </body>
    </html>


