extends ./includes/layoutDos.pug

block content
    <!DOCTYPE html>
    <html lang="en" >
    <head>
        <meta charset="UTF-8">
        <title>Edit employee</title>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js" type="text/javascript"></script>
        <link rel='stylesheet prefetch' href='http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
        <link rel='stylesheet prefetch' href='http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css'>
        <link rel='stylesheet prefetch' href='http://cdnjs.cloudflare.com/ajax/libs/jquery.bootstrapvalidator/0.5.0/css/bootstrapValidator.min.css'>
        <link rel="stylesheet" href="css/styleFormulario.css">
    </head>
    <body>
    <div class="container">
    <form class="well form-horizontal" action="/updateEmployee/data[0].idEmployeed" method="post"  id="contact_form">
        input(type="hidden", name="_method", value="PUT")
        input(type="hidden", name="idEmployeed", value=data[0].idEmployeed)
        <fieldset>
            <!-- Form Name -->
            <legend>Edit employee</legend>
            <!-- Text input-->
            <div class="form-group">
            <label class="col-md-4 control-label">Complete name</label>  
            <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-certificate"></i></span>
            input(class="form-control" type="text", name="completeName", placeholder="Complete name", value=data[0].completeName)
            </div>
            </div>
            </div>
            <!-- Text input-->
            <div class="form-group">
            <label class="col-md-4 control-label">Adress line</label>  
            <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-certificate"></i></span>
            input(class="form-control" type="text", name="adressLine", placeholder="Adress line", value=data[0].adressLine)
            </div>
            </div>
            </div>
            <!-- Text input-->
            <div class="form-group">
            <label class="col-md-4 control-label">Cellphone</label>  
            <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-certificate"></i></span>
            input(class="form-control" type="text", name="cellphone", placeholder="Cellphone", value=data[0].cellphone)
            </div>
            </div>
            </div>
            <!-- Text input-->
            <div class="form-group">
            <label class="col-md-4 control-label">Email</label>  
            <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-certificate"></i></span>
            input(class="form-control" type="text", name="email", placeholder="Email", value=data[0].email)
            </div>
            </div>
            </div>
            <!-- Text input-->  
            <div class="form-group">
            <label class="col-md-4 control-label">Workstation</label>  
            <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-certificate"></i></span>
            input(class="form-control" type="text", name="workstation", placeholder="Workstation", value=data[0].workstation)
            </div>
            </div>
            </div>
            <!-- Text input-->
            <div class="form-group">
            <label class="col-md-4 control-label">Sucursal code</label>  
            <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-certificate"></i></span>
            input(class="form-control" type="text", name="sucursales_sucursalCode", placeholder="Sucursal code", value=data[0].sucursales_sucursalCode)
            </div>
            </div>
            </div>
            <!-- Text input-->
            <div class="form-group">
            <label class="col-md-4 control-label">Agency code</label>  
            <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-certificate"></i></span>
            input(class="form-control" type="text", name="sucursales_mainAgency_idAgencyCode", placeholder="Agency code", value=data[0].sucursales_mainAgency_idAgencyCode)
            </div>
            </div>
            </div>
            <!-- Text input-->
            <div class="form-group">
            input(class="form-control" type="hidden", name="password", value=data[0].password)
            </div>
            <!-- Button --> 
            <div class="form-group">
            <label class="col-md-4 control-label"></label>
            <div class="col-md-4">
            <button type="submit" class="btn btn-warning">Save <span class="glyphicon glyphicon-floppy-disk"></span></button>
            </div>
            </div>
        </fieldset>
    </form>
    </div>
    </div><!-- /.container -->
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src='http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js'></script>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/bootstrap-validator/0.4.5/js/bootstrapvalidator.min.js'></script>
    <script  src="js/indexFormulario.js"></script>
    </body>
    </html>
