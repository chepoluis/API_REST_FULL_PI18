        <span class="input-group-addon"><i class="glyphicon glyphicon-certificate"></i></span>
        input(class="form-control" type="text", name="price", placeholder="Price", value="$"+data[0].price, disabled)
        </div>
        </div>
        </div>

        <!-- Button --> 
        <div class="form-group">
        <label class="col-md-4 control-label"></label>
        <div class="col-md-4">
        <button type="submit" class="btn btn-warning">Buy<span></span></button>
        </div>
        </div>
